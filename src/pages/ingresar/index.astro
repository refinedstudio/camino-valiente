---
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <div class="flex h-screen flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <h2
        class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-neutral-900 uppercase font-playfair-display"
      >
        Inicia sesión en tu cuenta
      </h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
      <form class="space-y-6" action="#" method="POST">
        <div>
          <label
            for="email"
            class="block text-sm/6 font-medium text-neutral-900"
            >Correo electrónico</label
          >
          <div class="mt-2">
            <input
              type="email"
              name="email"
              id="email"
              placeholder="Ej. camino@valiente.com"
              autocomplete="email"
              class="w-full border border-neutral-300 p-3 text-neutral-700 font-light text-sm focus:border-neutral-900 focus:outline-none"
              required
            />
          </div>
        </div>

        <div>
          <div class="flex items-center justify-between">
            <label
              for="password"
              class="block text-sm/6 font-medium text-neutral-900"
              >Contraseña</label
            >
          </div>
          <div class="mt-2">
            <input
              type="password"
              name="password"
              id="password"
              autocomplete="current-password"
              placeholder="Ej. sgknasowWGSA523!#"
              required
              class="w-full border border-neutral-300 p-3 text-neutral-700 font-light text-sm focus:border-neutral-900 focus:outline-none"
            />
          </div>
        </div>

        <div>
          <button
            type="submit"
            class="flex w-full justify-center bg-neutral-900 px-3 py-3 text-sm font-medium tracking-wide text-white shadow-xs hover:not-focus:bg-neutral-900 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-neutral-900 uppercase"
            >Iniciar sesión</button
          >
        </div>
      </form>

      <p class="mt-10 text-center text-sm/6 text-neutral-500">
        ¿Olvidaste tu contraseña?
        <a
          href="#"
          class="font-medium text-neutral-900 hover:not-focus:text-neutral-900"
          >Recupera tu contraseña</a
        >
      </p>
    </div>
  </div>
</Layout>
