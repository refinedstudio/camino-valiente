---
import Layout from "../layouts/Layout.astro";
import {
  HeroSection,
  DestinationSection,
  PrimaryCarouselSection,
  ParallaxSection,
  SecondaryCarouselSection,
  TeaserSection,
  DiscoverySection,
} from "../components/pages/home";
import {
  primaryDestinations,
  secondaryDestinations,
  tertiaryDestinations,
  quaternaryDestinations,
  quinaryDestinations,
} from "../data";
import { meta } from "../config";
---

<Layout
  title={meta.home.title}
  description={meta.home.description}
  keywords={meta.home.keywords}
  canonical={meta.home.canonical}
  image={meta.home.image}
  type={meta.home.type}
  robots={meta.home.robots}
  structuredData={meta.home.structuredData}
>
  <HeroSection />
  <DestinationSection destinations={primaryDestinations} />
  <PrimaryCarouselSection client:load />
  <DestinationSection destinations={secondaryDestinations} />
  <ParallaxSection
    imageUrl="https://www.peru.travel/Contenido/Atractivo/Imagen/es/522/1.1/Principal/huacachina-laguna.jpg"
    subtitle="Laguna Huacachina"
    category="ICA - PERU"
    title="Oasis en el desierto"
  />
  <DestinationSection destinations={tertiaryDestinations} />
  <SecondaryCarouselSection client:load />
  <DestinationSection destinations={quaternaryDestinations} />
  <TeaserSection />
  <DestinationSection destinations={quinaryDestinations} />
  <DiscoverySection />
</Layout>
