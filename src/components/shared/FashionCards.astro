---
interface FashionItem {
  id: string;
  imageUrl: string;
  title: string;
  category: string;
  subtitle?: string;
}

const items = [
  {
    id: "1",
    imageUrl:
      "https://images.pexels.com/photos/18477788/pexels-photo-18477788/free-photo-of-paisaje-montanas-bosque-arboles.jpeg",
    title: "CONSEJOS PARA LOS",
    category: "TIPS",
    subtitle: "MÁS VALIENTES",
  },
  {
    id: "2",
    imageUrl:
      "https://images.pexels.com/photos/9035474/pexels-photo-9035474.jpeg",
    title: "LUGARES MÁS",
    category: "LUGARES",
    subtitle: "RECOMENDADOS",
  },
  {
    id: "3",
    imageUrl: "https://images.pexels.com/photos/90597/pexels-photo-90597.jpeg",
    title: "RUTINA",
    category: "ESPIRITUAL",
    subtitle: "DE UNA SEMANA",
  },
];
---

<div class="px-4 py-24">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-16">
    {
      items.map((item) => (
        <div
          class:list={["space-y-12", "fashion-card-item", "transition-shadow"]}
        >
          <img
            src={item.imageUrl}
            alt={item.title}
            class="w-full aspect-[3/4] object-cover"
          />
          <div class="space-y-2">
            <p class="uppercase text-xs tracking-widest text-center ">
              {item.category}
            </p>
            <div>
              <h2 class="font-playfair-display text-2xl md:text-4xl leading-tight text-center uppercase">
                {item.title}
              </h2>
              {item.subtitle && (
                <h3 class="text-2xl md:text-4xl leading-tight text-center font-bold uppercase">
                  {item.subtitle}
                </h3>
              )}
            </div>
          </div>
        </div>
      ))
    }
  </div>
  <div class="flex justify-center my-24 flex-col items-center gap-4">
    <button class="uppercase text-sm tracking-widest font-semibold">
      cargar más
    </button>
    <div class="w-[1px] h-24 bg-neutral-900"></div>
  </div>
</div>
