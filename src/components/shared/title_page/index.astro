---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header
  class="border-b border-neutral-200
               py-[clamp(0.75rem,2vh,1rem)]
               mb-[clamp(1.5rem,4vw,2rem)]"
>
  <h1
    class="text-center font-serif tracking-wider font-normal uppercase text-neutral-800
             text-[clamp(1.125rem,2.5vw,1.875rem)]
             py-[clamp(1rem,3vh,1.5rem)]"
  >
    {title}
  </h1>
</header>
