---

<div class="py-8 px-12">
  <div class="flex flex-col md:flex-row items-center justify-between">
    <div class="flex space-x-6 mb-6 md:mb-0">
      {
        socialLinks.map((link) => (
          <a
            href={link.url}
            target="_blank"
            rel="noopener noreferrer"
            class="text-[#333333] hover:text-[#666666] transition-colors"
            set:html={link.icon}
          />
        ))
      }
    </div>
    <div class="font-sans">
      <p
        class="text-sm sm:text-xl md:text-2xl tracking-[0.25em] text-center text-stone-800 mb-4"
      >
        CAMINO VALIENTE
      </p>
      <p class="text-sm text-stone-600 text-center">
        © Copyright 2025 Camino Valiente
      </p>
    </div>

    <div class="flex space-x-6">
      {
        navLinks.map((link) => (
          <a
            href={link.url}
            class="text-base font-light font-sans text-[#333333] hover:text-[#666666] transition-colors"
          >
            {link.name}
          </a>
        ))
      }
    </div>
  </div>
</div>
