---
interface Props {
  location: string;
  subtitle: string;
  title: string;
  description: string;
  imageUrl: string;
  imageAlt: string;
  isReversed?: boolean;
}

const {
  location,
  subtitle,
  title,
  description,
  imageUrl,
  imageAlt,
  isReversed = false,
} = Astro.props;
---

<div
  class:list={[
    "w-full",
    "flex",
    "flex-col",
    "md:flex-row",
    "relative",
    "mb-16",
    "mt-24",
    "md:gap-24",
    "gap-16",
    "animated-card",
  ]}
>
  {
    !isReversed && (
      <div
        class="w-full md:w-1/2 h-[500px] sm:h-[720px] md:h-screen relative"
        data-reversed="false"
      >
        <img
          src={imageUrl}
          alt={imageAlt}
          class:list={["object-cover", "h-full", "w-full", "card-image"]}
        />
      </div>
    )
  }

  <div
    class="w-full md:w-1/2 relative h-full md:h-screen flex items-center justify-center"
  >
    <div
      class:list={[
        "w-full",
        "md:max-w-3xl",
        "mx-auto",
        "p-4",
        "md:p-8",
        "flex",
        "flex-col",
        "justify-center",
        "card-text-content",
      ]}
    >
      <p class="uppercase text-sm tracking-widest text-center mb-4">
        {location}
      </p>
      <h2
        class="text-2xl sm:text-4xl md:text-5xl font-playfair-display text-center mb-1 uppercase text-neutral-950"
      >
        {subtitle}
      </h2>
      <h2
        class="text-2xl sm:text-4xl md:text-5xl font-bold text-center mb-6 uppercase text-neutral-950"
      >
        {title}
      </h2>

      <div class="sm:px-8 text-center">
        <p
          class="text-neutral-600 leading-relaxed mb-4 text-sm sm:text-base font-light"
        >
          {description}
        </p>
      </div>

      <div class="flex justify-center mt-8">
        <button
          class="bg-neutral-950 text-white px-10 py-3 text-sm tracking-tight cursor-pointer font-playfair-display font-medium sm:text-base"
        >
          LEER M√ÅS
        </button>
      </div>
    </div>
  </div>

  {
    isReversed && (
      <div
        class="w-full md:w-1/2 h-[500px] sm:h-[720px] md:h-screen relative order-first md:order-last"
        data-reversed="true"
      >
        <img
          src={imageUrl}
          alt={imageAlt}
          class:list={["object-cover", "h-full", "w-full", "card-image"]}
        />
      </div>
    )
  }
</div>
