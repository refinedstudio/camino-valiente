---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="about-header">
  <h1 class="about-title">{title}</h1>
</header>

<style>
  .about-header {
    @apply pt-4 pb-4 border-b border-gray-200 mb-8;
  }

  .about-title {
    @apply text-center font-serif text-3xl tracking-wider font-normal;
    margin-right: 8%;
  }

  @media (max-width: 768px) {
    .about-header {
      @apply mb-16;
    }

    .about-title {
      @apply text-lg text-left;
      margin-right: 0;
    }
  }

  @media (min-width: 769px) and (max-width: 1465px) {
    .about-title {
      @apply text-2xl text-center;
      margin-right: 0;
    }
  }
</style> 